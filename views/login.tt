<div id="login">
  <form action="/login" method=post>
    <fieldset>
      <Legend> Please Log In</legend>
      <div>
        <label>Username:</label>
        <input type=text name=user>
      </div>
      <div>
        <label>Password:</label>
        <input type=password name=pass>
      </div>
      <div>
        <input class="submit" type=submit value=Login>
      </div>
    </fieldset>
  </form>
</div>
