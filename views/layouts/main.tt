<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <title>BaNG - 2013</title>
        <meta http-equiv="content-type" content="text/html; charset=utf-8">
        <link rel="stylesheet" type="text/css" href="/css/screen.css">
        <link rel="stylesheet" type="text/css" href="/css/tablesorter.css">
        <link rel="icon" type="image/ico" href="/favicon">
        <script src="/javascripts/jquery.js" type="text/javascript"></script>
        <script src="/javascripts/jquery.tablesorter.js" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function(){
                $('#configslist').tablesorter();
                $('#config').tablesorter();

                $("#configslist div.config_details").hide();
                $("#configslist tr").click(function(){
                    $(this).find("div.config_details").toggle();
                    $(this).find(".arrow").toggleClass("up");
                });
            });
        </script>
    </head>
    <body>
        <div id="header">
            <div id="ethz_logo">
                <img width="177" height="45" alt="ETH Zurich" src="http://www.phys.ethz.ch/phys/design/ETHlogo_177.png">
            </div>
            <div id="ethz_logo_background"></div>
            <h1 id="site_title">ISG D-PHYS <u>Ba</u>ckup Solution - <u>N</u>ext <u>G</u>eneration</h1>
        </div>
        <div id="infonav">
        </div>
        <div id="navigation">
            <a href="/" <% IF section == 'dashboard' %>class="active"<% END %>>Dashboard</a>
            <a href="/config/all" <% IF section == 'configs-overview' %>class="active"<% END %>>Host configs</a>
            <a href="/config/global" <% IF section == 'global-config' %>class="active"<% END %>>Global Settings</a>
            <a href="/statistics" <% IF section == 'statistics' %>class="active"<% END %>>Statistics</a>
        </div>
        <% IF error %>
        <div id="error">
            <p><% error %></p>
        </div>
        <% END %>
        <div id="content">
            <% content %>
        </div>
    </body>
</html>

