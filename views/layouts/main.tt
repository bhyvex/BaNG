<!DOCTYPE HTML>
<html>
    <head>
        <title>BaNG - 2013</title>
        <meta charset="utf-8">
        <link rel="icon" type="image/ico" href="/favicon">
        <link rel="stylesheet" href="/css/standard.css">
        <link rel="stylesheet" href="/css/tablesorter.css">
        <script src="/javascripts/jquery.js"></script>
        <script src="/javascripts/jquery.tablesorter.js"></script>
        <script>
            $(document).ready(function(){
                $('#configslist').tablesorter();
                $('#config').tablesorter();
                $('#config_default').tablesorter();

                $("#configslist div.conf_details").hide();

                $("#configslist td").click(function(){
                    $(this).find("div.conf_details").toggle();
                    $(this).find(".arrow").toggleClass("up");
                });

                $('.show_loader').click(function(){
                    $('#loader').show();
                });
            });
        </script>
    </head>
    <body>
        <div id="header">
            <div id="ethz_logo">
                <img width="177" height="45" alt="ETH Zurich" src="http://www.phys.ethz.ch/phys/design/ETHlogo_177.png">
            </div>
            <div id="ethz_logo_background"></div>
            <h1 id="site_title">ISG D-PHYS <u>Ba</u>ckup Solution - <u>N</u>ext <u>G</u>eneration</h1>
        </div>
        <div id="infonav">
            <% IF not session.logged_in %>
                <a href="/login"><img title="Anmelden" src="/images/login.png" alt="Anmelden" /></a>
            <% ELSE %>
                <a href="/logout"><img title="Abmelden" src="/images/logout.png" alt="Abmelden" /></a>
            <% END %>
        </div>
        <div id="navigation">
            <a href="/" <% IF section == 'dashboard' %>class="active"<% END %>>Dashboard</a>
            <a href="/schedule" <% IF section == 'schedule' %>class="active"<% END %>>Schedule Overview</a>
            <a href="/config/all" <% IF section == 'configs-overview' %>class="active"<% END %>>Host configs</a>
            <a href="/host" <% IF section == 'host' %>class="active"<% END %>>Host Info</a>
            <a href="/config/global" <% IF section == 'global-config' %>class="active"<% END %>>Global Settings</a>
            <a href="/statistics" <% IF section == 'statistics' %>class="active"<% END %>>Statistics</a>
        </div>
        <% IF msg %>
        <div id="flash">
            <p><% msg %></p>
        </div>
        <% END %>
        <div id="loader"><img src="/images/loading.gif" alt="Loader"></div>
        <div id="content">
            <% content %>
        </div>
    </body>
</html>

